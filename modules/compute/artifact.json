{
  "name": "ec2_autoscaling_alb",
  "description": "Application Load Balancer and Auto Scaling Group with Docker User Data",
  "version": "1.0.0",
  "manifest_version": 1,
  "state": "managed",
  "native": {
    "type": "terraform",
    "entry_point": "."
  },
  "props": {
    "project_name": {
      "type": "string",
      "description": "Prefix for resource naming",
      "required": false
    },
    "vpc_id": {
      "type": "string",
      "description": "The ID of the VPC",
      "required": false
    },
    "subnets": {
      "type": "list(string)",
      "description": "List of subnet IDs for placement",
      "required": false
    },
    "security_group_id": {
      "type": "string",
      "description": "The Shared Security Group ID",
      "required": false
    },
    "repository_url": {
      "type": "string",
      "description": "Container repository URL",
      "default": "https://hub.docker.com/",
      "required": false
    },
    "image_name": {
      "type": "string",
      "description": "Container image name",
      "default": "nginx",
      "required": false
    },
    "image_tag": {
      "type": "string",
      "description": "Container image tag",
      "default": "latest",
      "required": false

    }
  }
}