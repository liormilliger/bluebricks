{
  "name": "Application Load Balancer",
  "identifier": "alb-networking",
  "description": "Network Hub: Provisions ALB and discovers VPC subnets.",
  "type": "terraform",
  "path": "artifacts/ALB",
  "inputs": [
    {
      "name": "region",
      "type": "string",
      "required": true,
      "label": "AWS Region"
    },
    {
      "name": "vpc_id",
      "type": "string",
      "required": true,
      "label": "VPC ID"
    },
    {
      "name": "project_name",
      "type": "string",
      "required": false,
      "default": "bluebricks-demo",
      "label": "Project Name"
    },
    {
      "name": "lb_port",
      "type": "number",
      "required": false,
      "default": 80,
      "label": "Listener Port"
    }
  ],
  "outputs": [
    {
      "name": "target_group_arn",
      "description": "Target Group ARN"
    },
    { 
      "name": "unified_security_group_id",
      "description": "ALB Security Group ID"
    },
    { 
      "name": "alb_dns_name",
      "description": "Load Balancer DNS Name"
    },
    { 
      "name": "public_subnets",
      "description": "Discovered Public Subnets"
    },
    { 
      "name": "private_subnets",
      "description": "Discovered Private Subnets"
    }
  ]
}