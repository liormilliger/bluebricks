{
  "name": "Postgres Database (RDS)",
  "identifier": "rds-postgres",
  "description": "Managed PostgreSQL instance secured by Compute SG.",
  "type": "terraform",
  "path": "artifacts/RDS",
  "inputs": [
    {
      "name": "vpc_id",
      "type": "string",
      "required": true,
      "label": "VPC ID"
    },
    {
      "name": "subnet_ids",
      "type": "list(string)",
      "required": true,
      "label": "Subnets",
      "description": "Wire this to the 'Private Subnets' output of the Network Artifact."
    },
    {
      "name": "compute_security_group_id",
      "type": "string",
      "required": true,
      "label": "Allowed Compute SG",
      "description": "Wire to Compute Artifact Output."
    },
    {
      "name": "db_name",
      "type": "string",
      "required": false,
      "default": "bluebricks",
      "label": "Database Name"
    },
    {
      "name": "db_username",
      "type": "string",
      "required": false,
      "default": "lior",
      "label": "Master Username"
    },
    {
      "name": "db_password",
      "type": "string",
      "required": true,
      "sensitive": true,
      "label": "Master Password"
    },
    {
      "name": "project_name",
      "type": "string",
      "required": false,
      "default": "bluebricks-demo",
      "label": "Project Name"
    }
  ],
  "outputs": [
    {
      "name": "db_endpoint",
      "description": "Database Endpoint Address"
    },
    {
      "name": "db_port",
      "description": "Database Port"
    },
    {
      "name": "connection_string",
      "description": "Full Connection String",
      "sensitive": true
    }
  ]
}